{
  "name": "to-do-app-be",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "declaration": true,
  
    "lib": ["es2018", "esnext.asynciterable"],
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/",
    "config/"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings"
  ],
  "types": "build/server.d.ts",
  "files": [
    "build",
    "package.json",
    "package-lock.json",
    "README.md"
  ],
  "scripts": {
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
    "start": "npm run serve",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "watch-ts": "tsc -w"
  },
  "engines": {
    "node": "16.13.1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.0",
    "mongoose": "^6.1.5",
    "underscore": "^1.13.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.8",
    "@types/underscore": "^1.11.4",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
